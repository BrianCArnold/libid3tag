#!/usr/bin/make -f
# makefile for libmad

# Uncomment this to turn on verbose mode. 
#export DH_VERBOSE=1

# This is the debhelper compatibility version to use.
export DH_COMPAT=2

CONFIGURE_FLAGS=--enable-shared
ifneq (,$(findstring debug,$(DEB_BUILD_OPTIONS)))
CONFIGURE_FLAGS += --enable-profiling --enable-debugging
else
CONFIGURE_FLAGS += --disable-profiling --disable-debugging
endif

include /usr/share/dpatch/dpatch.make

build: patch build-stamp
build-stamp:
	dh_testdir

	# Add here commands to compile the package.
	./configure --prefix=/usr $(CONFIGURE_FLAGS)
	$(MAKE)
	touch build-stamp

clean: unpatch
	dh_testdir
	dh_testroot
	rm -f build-stamp
	# annoying lintian errors
	rm -f config.cache libz/config.log \
		libz/config.status compat.c frametype.c
	# Add here commands to clean up after the build process.
	-$(MAKE) distclean

	dh_clean

install:
install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs -a

	# Add here commands to install the package into debian/tmp.
	$(MAKE) DESTDIR=$(PWD)/debian/tmp install
	mkdir -p debian/libid3tag0-dev/usr/lib/pkgconfig 
	cp debian/id3tag.pc debian/libid3tag0-dev/usr/lib/pkgconfig
	dh_movefiles

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir -a
	dh_testroot -a
	dh_installdocs -plibid3tag0
	dh_installchangelogs -plibid3tag0 CHANGES
#	dh_installexamples -a
#	dh_undocumented -a
	dh_installman -a
	dh_strip -a
	dh_link -a
	dh_compress -a
	dh_fixperms -a
	dh_installdeb -a
	dh_makeshlibs -plibid3tag0 -V "libid3tag0 (>= 0.15.0b)"
	dh_shlibdeps -a -l \
		$(PWD)/debian/libid3tag0/usr/lib
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary: binary-arch
.PHONY: build clean binary-arch binary install
